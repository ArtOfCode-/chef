<div class="col-sm-3 col-md-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="panel-title"><%= link_to user.username, url_for(:controller => :users, :action => :show, :id => user.id) %></h4>
    </div>
    <div class="panel-body">
      <p><span class="glyphicon glyphicon-list-alt"></span> <%= user.recipes.count %> recipes</p>
      <p><span class="glyphicon glyphicon-heart-empty"></span> <%= user.favorites.count %> favourites</p>
      <p><span class="glyphicon glyphicon-pencil"></span> <%= user.comments.count %> comments</p>
    </div>
  </div>
</div>
