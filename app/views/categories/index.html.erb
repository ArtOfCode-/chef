<% content_for :title, "Categories" %>

<h3>Categories</h3>
<% @categories.in_groups_of(4) do |group| %>
  <% group.each do |c| %>
    <%= render 'categories/category', :category => c %>
  <% end %>
<% end %>

<div class="text-center">
  <%= will_paginate @categories, renderer: BootstrapPagination::Rails %>
</div>
